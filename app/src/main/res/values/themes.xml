<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetworkTools" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/blue_300</item>
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/grey_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_300</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.NetworkTools.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NetworkTools.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NetworkTools.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>